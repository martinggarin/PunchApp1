{
  "expo": {
    "name": "PunchApp",
    "slug": "Punch-App",
    "platforms": [
      "ios",
      "android"
    ],
    "description":"PunchApp is a place where Merchants and Customers can interact. Customers can explore and receive loyalty rewards. Merchants can give out rewards and view Analytics that will help grow their Revenue!",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon1.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F26419"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier":"com.punch-app.punchapp",
      "buildNumber":"1.0.0",
      "supportsTablet": false,
      "infoPlist": {
        "NSCameraUsageDescription": "Punch-App uses the camera to scan user QR-codes and process rewards."
      }
    },
    "android": {
      "package": "com.punch_app.punchapp",
      "versionCode":1,
      "adaptiveIcon":{
        "foregroundImage":"./assets/icon.png",
        "backgroundColor":"#F26419"
      },
      "permissions":[
        "CAMERA", 
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    }
  }
}
